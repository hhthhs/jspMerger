<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.mylibrary.book.library.mapper.BookSearchMapper">
	<resultMap type="com.mylibrary.book.library.vo.BookSearchVO"
		id="booklistMap">
		<result property="bid" column="bid" />
		<result property="title" column="title" />
		<result property="author" column="author" />
		<result property="publisher" column="publisher" />
		<result property="isbn" column="isbn" />
		<result property="bcategory" column="bcategory" />
		<result property="blocation" column="blocation" />
		<result property="bcount" column="bcount" />
		<result property="descrip" column="descrip" />
		<result property="willdel" column="willdel" />
		<result property="img" column="img" />
	</resultMap>

	<select id="showList" resultMap="booklistMap">
		SELECT * FROM booklist
	</select>
	
	<select id="searchBook" resultMap="booklistMap"
		parameterType="java.lang.String">
		select*from booklist where title like '%#{title}%'
	</select>


</mapper>